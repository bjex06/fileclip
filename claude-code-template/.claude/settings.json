{
  "model": "claude-sonnet-4-20250514",
  
  "permissions": {
    "allow": [
      "Bash(npm:*)", "Bash(pnpm:*)", "Bash(git:*)",
      "Bash(cat:*)", "Bash(ls:*)", "Bash(grep:*)",
      "Read", "Write"
    ],
    "deny": ["Bash(sudo:*)", "Bash(rm -rf /)*"]
  },

  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write",
        "hooks": [{
          "type": "command",
          "command": "if [[ \"$CLAUDE_FILE_PATH\" == *.ts ]] || [[ \"$CLAUDE_FILE_PATH\" == *.tsx ]]; then pnpm eslint --fix \"$CLAUDE_FILE_PATH\" 2>/dev/null || true; fi"
        }]
      }
    ]
  },

  "rules": [
    { "pattern": "src/app/api/**/*.ts", "rules": [".claude/rules/api-security.md"] },
    { "pattern": "src/components/**/*.tsx", "rules": [".claude/rules/component-rules.md"] }
  ],

  "subagents": {
    "debugger": { "trigger": "error|exception|bug|fix", "prompt": ".claude/subagents/debugger.md" },
    "reviewer": { "trigger": "review|PR|check|quality", "prompt": ".claude/subagents/reviewer.md" },
    "architect": { "trigger": "design|architecture|scale", "prompt": ".claude/subagents/architect.md" }
  }
}
